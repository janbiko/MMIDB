<% include ../partials/header %>
  <div class="container-fluid">
    <div class="row">
      <% include ../partials/sidenav-top %>
        <li class="nav-item">
          <a class="nav-link" href="http://localhost:3000/">
            <i class="fas fa-home"></i> Home </a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/employee">
            <i class="fas fa-users"></i> Employee Dashboard</a>
        </li>
        <% include ../partials/sidenav-bottom %>


          <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
              <h1 class="h2">Employee Dashboard</h1>
            </div>
            <ul>
              <% if (items.length > 0) { %>
                <% items.forEach (function(item, index) { %>
                  <li style="list-style: none; padding: 5px">
                    <a href="/manager/employees/edit/<%= item.EmployeeID %>" class="btn btn-outline-primary" style="width: 20%">
                      <%= item.Name %>
                    </a>
                  </li>
                  <% }); %>
                    <% } else { %>
                      <p>
                        <strong>There is no data available.</strong>
                      </p>
                      <% } %>
            </ul>
          </main>

          <% include ../partials/footer %>